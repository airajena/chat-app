{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true
	},
	"ts-node": {
	  "esm": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
  }
  